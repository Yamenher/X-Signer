<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurface"
    android:transitionGroup="true"
    android:id="@+id/_coordinator">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        style="@style/Widget.Material3.AppBarLayout"
        android:id="@+id/_app_bar">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:liftOnScrollColor="?colorOnSurfaceInverse"
            app:layout_collapseMode="pin"
            android:id="@+id/_toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorSurface"
            android:id="@+id/Scroller">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/launcher_icon"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:textColor="?colorOnSecondaryContainer"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/version_text"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"
                    android:textColor="?colorOnSurface"
                    android:layout_gravity="center_horizontal"
                    android:text="Version" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:minWidth="110dp"
                        android:minHeight="80dp"
                        android:background="@drawable/button_left"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/linear_telegram">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/telegram"
                            android:tint="?colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/telegram_text"
                            android:layout_marginVertical="5dp"
                            android:textSize="13sp"
                            android:textColor="?colorOnSurface"
                            android:layout_gravity="center_horizontal"
                            android:text="Community" />

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="?colorSurface"/>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:minWidth="110dp"
                        android:minHeight="80dp"
                        android:background="@drawable/button_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/linear_github">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/github"
                            android:tint="?colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/github_text"
                            android:layout_marginVertical="5dp"
                            android:textSize="13sp"
                            android:textColor="?colorOnSurface"
                            android:layout_gravity="center_horizontal"
                            android:text="GitHub" />

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="?colorSurface"/>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:minWidth="110dp"
                        android:minHeight="80dp"
                        android:background="@drawable/button_right"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/linear_support">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/ic_support"
                            android:tint="?colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/support_text"
                            android:layout_marginVertical="5dp"
                            android:textSize="13sp"
                            android:textColor="?colorOnSurface"
                            android:layout_gravity="center_horizontal"
                            android:text="Support" />

                    </LinearLayout>
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_bg_drawable"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:paddingVertical="20dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="?colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:text="• What's New?" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:textSize="15sp"
                        android:textColor="?colorOnSurface"
                        android:text="•See changelog here MFs" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>